spring.application.name=rent-map-platform

# Database Configuration
# Replace with your PostgreSQL connection details
spring.datasource.url=jdbc:postgresql://localhost:5432/rentmap
spring.datasource.username=postgres
spring.datasource.password=YOUR_DATABASE_PASSWORD
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate Configuration
# Option 1: For development (recreates schema, deletes data)
# spring.jpa.hibernate.ddl-auto=create

# Option 2: For production (preserves data, requires manual migration)
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# File Upload Configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

file.upload-dir=uploads

# Server Configuration
server.port=8080
server.error.include-message=always
server.error.include-binding-errors=always

# JWT Configuration
# IMPORTANT: Generate a secure random key (minimum 32 characters) for production
# You can use: openssl rand -base64 32
jwt.secret=YOUR_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG_FOR_JWT_SIGNING
jwt.expiration=86400000

# CORS Configuration
cors.allowed-origins=http://localhost:5173

# Swagger/OpenAPI Configuration
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html



